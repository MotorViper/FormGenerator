#IF XML 
UnderLine: Border
	Height: 2
	Background: Black
	HorizontalAlignment: Stretch
#FI

DoubleLabelUnder: Grid
	Rows: 2
	HorizontalAlignment: Center
	Field: Label
		Style: LabelUnder
		Content: {P1}
		HorizontalAlignment: Center
	Field: Label
		Style: LabelUnder
		Content: {P2}
		Margin: '0,-12,0,0'
		HorizontalAlignment: Center

EditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$P1
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}

CheckedEditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$P1
		Background: IF:({P2}|White|MistyRose)
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}

LabelWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: Label
		Style: Left
		Content: $$P1
		Height: 25
		Margin: '0,-3,0,0'
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}
