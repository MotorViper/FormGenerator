PlusWidth: 17
Editor: TextBox
	ShiftRight: 2
    Align: Stretch
InvertedLabel: Label
	Invert:
	Align: Stretch
	ContentAlign: Middle
#IF XML 
UnderLine: Border
	Height: 2
	Background: Black
#FI
#IF HTML 
UnderLine: hr
	Style: "color:#00C;background-color:#00c;height:2px;border:none"
#FI
LabelUnder: Label
	ShiftUp: 6
	FontSize: 8
DoubleLabelUnder: Grid
	Rows: 2
	HorizontalAlignment: Center
	Field: LabelUnder
		Content: {P1}
		HorizontalAlignment: Center
	Field: LabelUnder
		Content: {P2}
		ShiftUp: 12
		HorizontalAlignment: Center
EditorWithLabelUnder: Grid
	ShiftRight: 2
	Rows: 3
	Field: TextBox
		Align: Stretch
		Content: $$P1
	Field: UnderLine
		Align: Stretch
	Field: LabelUnder	
		Content: {{P1}.NAME}
		Align: Left
CheckedEditorWithLabelUnder: Grid
	ShiftRight: 2
	Rows: 3
	Field: TextBox
		Align: Stretch
		Content: $$P1
		Background: IF:({P2}|White|MistyRose)
	Field: UnderLine
		Align: Stretch
	Field: LabelUnder	
		Content: {{P1}.NAME}
		Align: Left
LabelWithLabelUnder: Grid
	ShiftRight: 2
	Rows: 3
	Field: Label
		Content: $$P1
		Height: 25
		ShiftUp: 3
		Align: Left
	Field: UnderLine
		Align: Stretch
	Field: LabelUnder	
		Content: {{P1}.NAME}
		Align: Left
CentreLabel: Label
    Align: Stretch
    ContentAlign: Middle
BorderedLabel: CentreLabel
	BorderThickness: 1
	BorderBrush: Black
	Margin: 1
	Height: 26
RightLabel: Label
    Align: Right

AbilityGrid:
    Field: InvertedLabel
        Content: {{P1}.NAME}
    Field: Editor
        Content: $$P1
    Field: BorderedLabel
        Content: ($$P1 - 10) / 2
		Width: 27
    Field: BorderedLabel
    Field: BorderedLabel

SavingGrid:
	Field: InvertedLabel
		Content: {P1}
	Field: BorderedLabel
		Content: {{P1}Throw}
	Field: Label
		Content: =
	Field: BorderedLabel
		Content: {{P1}Base}
	Field: Label
		Content: '+'
	Field: BorderedLabel
		Debug: true
		Content: {{P2}Modifier}
	Field: Label
		Content: '+'
	Field: BorderedLabel
	Field: Label
		Content: '+'
	Field: BorderedLabel
	Field: Label
		Content: '+'
	Field: BorderedLabel


WeaponGrid:
	Field: ComboBox
		Content: $$P1
		SelectionOptions: Weapons
		HorizontalAlignment: Stretch
		Height: 25
	Field: BorderedLabel
		Content: $Melee
	Field: BorderedLabel
		Content: {Weapons.{$P1}.Damage}
	Field: BorderedLabel
		Content: {Weapons.{$P1}.Range}
	Field: Label