#IF XML 
UnderLine: Border
	Height: 2
	Background: Black
#FI
#IF HTML 
UnderLine: hr
	Style: "color:#00C;background-color:#00c;height:2px;border:none"
#FI

DoubleLabelUnder: Grid
	Rows: 2
	HorizontalAlignment: Center
	Field: Label
		Style: LabelUnder
		Content: {P1}
		HorizontalAlignment: Center
	Field: Label
		Style: LabelUnder
		Content: {P2}
		Margin: '0,-12,0,0'
		HorizontalAlignment: Center

EditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$P1
	Field: UnderLine
		Style: Stretch
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}

CheckedEditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$P1
		Background: IF:({P2}|White|MistyRose)
	Field: UnderLine
		Style: Stretch
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}

LabelWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: Label
		Style: Left
		Content: $$P1
		Height: 25
		Margin: '0,-3,0,0'
	Field: UnderLine
		Style: Stretch
	Field: Label
		Style: LabelUnderLeft
		Content: {P1}

AbilityGrid:
    Field: Label
		Style: Inverted
        Content: {P1}
    Field: TextBox
	    Style: Stretch
		Margin: '2,0,0,0'
        Content: $$P1
    Field: Label
		Style: BorderedLabel
        Content: ($$P1 - 10) / 2
		Width: 27
    Field: Label
		Style: BorderedLabel
    Field: Label
		Style: BorderedLabel

SavingGrid:
	Field: Label
		Style: Inverted
		Content: {P1}
	Field: Label
		Style: BorderedLabel
		Content: {{P1}Throw}
	Field: Label
		Content: =
	Field: Label
		Style: BorderedLabel
		Content: {{P1}Base}
	Field: Label
		Content: '+'
	Field: Label
		Style: BorderedLabel
		Debug: true
		Content: {{P2}Modifier}
	Field: Label
		Content: '+'
	Field: Label
		Style: BorderedLabel
	Field: Label
		Content: '+'
	Field: Label
		Style: BorderedLabel
	Field: Label
		Content: '+'
	Field: Label
		Style: BorderedLabel
