#IF XML 
UnderLine: Border
	Height: 2
	Background: Black
	HorizontalAlignment: Stretch
#FI

DoubleLabelUnder: Grid
	Rows: 2
	HorizontalAlignment: Centre
	Field: Label
		Style: LabelUnder
		Content: $1
		HorizontalAlignment: Centre
	Field: Label
		Style: LabelUnder
		Content: $2
		Margin: '0,-12,0,0'
		HorizontalAlignment: Centre

EditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$1
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: $1

CheckedEditorWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: TextBox
		Style: Stretch
		Content: $$1
		Background: IF:({2}|White|MistyRose)
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: $1

LabelWithLabelUnder: Grid
	Style: ShiftRight
	Rows: 3
	Field: Label
		Style: Left
		Content: $$1
		Height: 25
		Margin: '0,-3,0,0'
	Field: UnderLine
	Field: Label
		Style: LabelUnderLeft
		Content: $1
